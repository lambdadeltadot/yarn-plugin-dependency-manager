{
  "root": true,
  "extends": [
    "plugin:@typescript-eslint/eslint-recommended",
    "semistandard",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-console": "error",
    "no-unused-vars": "off",
    "operator-linebreak": [
      "error",
      "before"
    ],
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_\\$",
        "varsIgnorePattern": "^_\\$"
      }
    ]
  }
}
